join(
  union(
    createArray(
      outputs('Get_a_row_by_ID')?['body/cr8bd_manager'],
      outputs('Get_a_row_by_ID')?['body/cr8bd_sol_beneficiario'],
      outputs('Get_a_row_by_ID')?['body/cr8bd_solicitadopor']
    ),
    createArray()
  ),
  ';'
)

